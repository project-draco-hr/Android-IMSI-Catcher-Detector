{
  int off=0;
  byte[] buf=mBuffer.getBytes();
  try {
    while (off < buf.length) {
      int len=Math.min(PIPE_SIZE,buf.length - off);
      mStream.write(buf,off,len);
      off+=len;
    }
  }
 catch (  IOException e) {
    Log.d(TAG,e.getMessage());
  }
  try {
    mStream.close();
  }
 catch (  IOException e) {
    Log.d(TAG,"cannot close stream",e);
  }
}
