{
  byte[] buf=new byte[PIPE_SIZE];
  try {
    int len;
    while ((len=mStream.read(buf)) != -1) {
      String s=new String(buf,0,len);
      mBuffer.append(s);
    }
  }
 catch (  IOException e) {
    Log.d(TAG,e.getMessage());
  }
  try {
    mStream.close();
  }
 catch (  IOException e) {
    Log.d(TAG,"cannot close stream",e);
  }
}
