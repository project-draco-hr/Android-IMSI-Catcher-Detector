{
  int action=msg.getData().getInt(ACTION);
  String text=msg.getData().getString(TEXT);
switch (action) {
case ACTION_SHOW:
    mPDialog.show();
  mPDialog.setMessage("Running Root Library Tests...");
break;
case ACTION_HIDE:
if (null != text) print(text);
mPDialog.hide();
break;
case ACTION_DISPLAY:
print(text);
break;
case ACTION_PDISPLAY:
mPDialog.setMessage(text);
break;
}
}
