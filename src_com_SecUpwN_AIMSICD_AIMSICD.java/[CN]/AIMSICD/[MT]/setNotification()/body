{
  NotificationCompat.Builder mBuilder=new NotificationCompat.Builder(mContext).setSmallIcon(R.drawable.iconbn).setContentTitle(mContext.getResources().getString(R.string.app_name)).setContentText("Phone Type " + mDevice.getPhoneType(false)).setOngoing(true).setAutoCancel(false);
  Intent notificationIntent=new Intent(this,AIMSICD.class);
  PendingIntent contentIntent=PendingIntent.getActivity(this,0,notificationIntent,0);
  mBuilder.setContentIntent(contentIntent);
  NotificationManager mNotificationManager=(NotificationManager)getSystemService(Context.NOTIFICATION_SERVICE);
  mNotificationManager.notify(mID,mBuilder.build());
}
