{
  new Thread(){
    @Override public void run(){
      try {
        Runtime.getRuntime().exec("logcat -c -b main -b system -b radio -b events");
      }
 catch (      Exception e) {
        Log.e(TAG,mTAG + ": Error clearing logs",e);
      }
      runOnUiThread(new Runnable(){
        @Override public void run(){
          logView.setText("");
        }
      }
);
    }
  }
.start();
}
