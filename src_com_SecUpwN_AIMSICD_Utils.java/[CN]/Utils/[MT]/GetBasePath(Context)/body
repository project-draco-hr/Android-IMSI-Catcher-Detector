{
  Context mContext=ctx.getApplicationContext();
  String mBasePath="";
  if (mContext != null) {
    if (mContext.getFilesDir().exists())     mBasePath=mContext.getFilesDir().getAbsolutePath();
 else     if (!mContext.getFilesDir().mkdirs())     mBasePath="";
  }
 else {
    mBasePath="";
  }
  return mBasePath;
}
