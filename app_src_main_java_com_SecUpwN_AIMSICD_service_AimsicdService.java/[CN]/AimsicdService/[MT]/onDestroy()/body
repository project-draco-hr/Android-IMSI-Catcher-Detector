{
  super.onDestroy();
  prefs.unregisterOnSharedPreferenceChangeListener(this);
  cancelNotification();
  dbHelper.close();
  mContext.unregisterReceiver(mMessageReceiver);
  if (mRequestExecutor != null) {
    mRequestExecutor.stop();
    mRequestExecutor=null;
  }
  mHandler=null;
  mHandlerThread.quit();
  mHandlerThread=null;
  Log.i(TAG,"Service destroyed");
}
