{
  new AlertDialog.Builder(this).setIcon(status.getIcon()).setTitle(getString(R.string.status) + "\t" + getString(status.getName())).setMessage(status.getDescription()).setPositiveButton(android.R.string.ok,new DialogInterface.OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      dialog.dismiss();
    }
  }
).show();
}
