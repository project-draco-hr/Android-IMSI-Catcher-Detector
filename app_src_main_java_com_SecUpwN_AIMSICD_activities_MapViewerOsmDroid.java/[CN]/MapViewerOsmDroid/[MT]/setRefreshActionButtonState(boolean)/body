{
  if (mOptionsMenu != null) {
    final MenuItem refreshItem=mOptionsMenu.findItem(R.id.get_opencellid);
    if (refreshItem != null) {
      if (refreshing) {
        refreshItem.setActionView(R.layout.actionbar_indeterminate_progress);
      }
 else {
        refreshItem.setActionView(null);
      }
    }
  }
}
