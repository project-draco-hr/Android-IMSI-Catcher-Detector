{
  database.execSQL("CREATE TABLE " + CELL_SIGNAL_TABLE + " ("+ COLUMN_ID+ " INTEGER PRIMARY KEY AUTOINCREMENT, "+ "cellID INTEGER, signal INTEGER, "+ "timestamp INTEGER);");
  database.execSQL("CREATE INDEX cellID_index ON " + CELL_SIGNAL_TABLE + " (cellID);");
  database.execSQL("CREATE INDEX cellID_timestamp ON " + CELL_SIGNAL_TABLE + " (timestamp);");
  String SMS_DATABASE_CREATE="CREATE TABLE " + SILENT_SMS_TABLE + " ("+ COLUMN_ID+ " INTEGER PRIMARY KEY AUTOINCREMENT, "+ "Address VARCHAR, "+ "Display VARCHAR, "+ "Class VARCHAR, "+ "ServiceCtr VARCHAR, "+ "Message VARCHAR, "+ "Timestamp TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP);";
  database.execSQL(SMS_DATABASE_CREATE);
  String ZeroSMS="INSERT INTO " + SILENT_SMS_TABLE + " (Address,Display,Class,ServiceCtr,Message) "+ "VALUES ('ADREZZ','DizzPlay','CLAZZ','SMSC','DaTestMessage');";
